{
    "name": "sxapi-sample-simple",
    "description": "sxapi simple sample version 0.1.0",
    "version": "0.1.1",
    "session": {},
    "plugins": [
    ],
    "server": {
        "type": "express",
        "port": "19777",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "body": "<html><head></head><body><h1>Registry API for the Tempo project</h1></body></html>"
            },
            {
                "path": "/ping",
                "code": "200",
                "header": {
                    "Content-Type": "application/json"
                },
                "body": "{\"health\":\"good\"}"
            },
            {
                "path": "/toto",
                "body": "<html><head></head><body><h1>TOTOT</h1></body></html>"
            },
            {
                "path": "/txt",
                "code": "201",
                "header": {
                    "Content-Type": "text/plain"
                },
                "body": "blabla"
            },
            {
                "path": "/json",
                "code": "200",
                "header": {
                    "Content-Type": "application/json"
                },
                "body": "{\"key\":\"value\"}"
            },
            {
                "path": "/function",
                "handler": "$ws.dynamicRequestHandlerTest",
                "param_sample": "value de param_sample"
            },
            {
                "path": "/auth",
                "method": "POST",
                "handler": "process.$api.authEndpoint",
                "hashAlgorithm": "sha256",
                "digest": "base64"
            },
            {
                "path": "/registry",
                "method": "GET",
                "handler": "process.$api.registryEndpoint",
                "query_view": "cell:running",
                "resource": "tempo_db"
            },
            {
                "path": "/session",
                "method": "GET",
                "handler": "process.$api.sessionEndpoint"
            },
            {
                "path": "/hvs",
                "method": "ROUTER",
                "handler": "process.$api.hv.router",
                "resource": "tempo_db",
                "endpoints": [
                    {
                        "path": "/hvs",
                        "method": "GET",
                        "handler": "process.$api.hv.listEndpoint",
                        "query_view": "hv:all"
                    },
                    {
                        "path": "/hvs",
                        "method": "POST",
                        "handler": "process.$api.hv.addEndpoint",
                        "authorized_profile": "aws-micro,aws-medium,google-micro",
                        "authorized_state": "prepared,startable"
                    },
                    {
                        "path": "/hvs/metrics",
                        "method": "GET",
                        "handler": "process.$api.hv.metricsEndpoint",
                        "query_view": "hv:by_state"
                    },
                    {
                        "path": "/hvs/:id",
                        "method": "GET",
                        "handler": "process.$api.hv.detailEndpoint"
                    },
                    {
                        "path": "/hvs/:id",
                        "method": "PUT",
                        "handler": "process.$api.hv.updateEndpoint",
                        "authorized_state": "prepared,startable,running,stopped,dead",
                        "authorized_params": "owner,max_cell,state,token"
                    },
                    {
                        "path": "/hvs/:id",
                        "method": "DELETE",
                        "handler": "process.$api.hv.deleteEndpoint",
                        "authorized_state": "prepared,dead,stopped"
                    },
                    {
                        "path": "/hvs/:id/start",
                        "method": "GET",
                        "handler": "process.$api.hv.startEndpoint",
                        "authorized_state": "prepared,startable"
                    },
                    {
                        "path": "/hvs/:id/stop",
                        "method": "GET",
                        "handler": "process.$api.hv.stopEndpoint",
                        "authorized_state": "running"
                    }
                ]
            },
            {
                "path": "/cells",
                "method": "ROUTER",
                "handler": "process.$api.cell.router",
                "resource": "tempo_db",
                "endpoints": [
                    {
                        "path": "/cells",
                        "method": "GET",
                        "handler": "process.$api.cell.listEndpoint",
                        "query_view": "cell:all"
                    },
                    {
                        "path": "/cells",
                        "method": "POST",
                        "handler": "process.$api.cell.addEndpoint",
                        "query_view": "cell:all",
                        "min_duration": 350
                    },
                    {
                        "path": "/cells/:id",
                        "method": "GET",
                        "handler": "process.$api.cell.detailEndpoint"
                    },
                    {
                        "path": "/cells/:id",
                        "method": "PUT",
                        "handler": "process.$api.cell.updateEndpoint",
                        "authorized_state": "prepared,scheduled,startable,starting,running",
                        "authorized_params": "duration,state,start,stop,activity,location"
                    },
                    {
                        "path": "/cells/:id",
                        "method": "DELETE",
                        "handler": "process.$api.cell.deleteEndpoint",
                        "authorized_state": "prepared,scheduled,startable,stopped,dead"
                    },
                    {
                        "path": "/cells/:id/start",
                        "method": "GET",
                        "handler": "process.$api.cell.startEndpoint",
                        "authorized_state": "prepared,scheduled"
                    },
                    {
                        "path": "/cells/:id/stop",
                        "method": "GET",
                        "handler": "process.$api.cell.stopEndpoint",
                        "authorized_state": "running"
                    },
                    {
                        "path": "/cells/metrics",
                        "method": "GET",
                        "handler": "process.$api.cell.metricsEndpoint",
                        "query_view": "cell:by_state"
                    }
                ]
            },
            {
                "path": "/logs",
                "method": "ROUTER",
                "handler": "process.$api.log.router",
                "resource": "tempo_log_db",
                "endpoints": [
                    {
                        "path": "/logs",
                        "method": "GET",
                        "handler": "process.$api.log.listEndpoint",
                        "query_view": "logs:all"
                    },
                    {
                        "path": "/logs/metrics",
                        "method": "GET",
                        "handler": "process.$api.log.metricsEndpoint",
                        "query_view": "metrics:by_doctype"
                    },
                    {
                        "path": "/logs/:id",
                        "method": "GET",
                        "handler": "process.$api.log.detailEndpoint"
                    }
                ]
            }
        ]
    },
    "tree": {
        "debug": true,
        "log": {
            "filters": {
                "level": "0,1,2,3,4",
                "type": "debug,info,error,warn"
            },
            "sqs": {
                "resource": "tempo_log_queue"
            }
        },
        "events": {
            "queues": {
                "admin": {
                    "type": "sqs",
                    "resource": "tempo_admin_queue",
                    "match": {
                        "what": "apiIsStarted,apiIsRunning,apiIsStopped"
                    }
                }
            }
        },
        "resources": {
            "tempo_admin_queue": {
                "_class": "./tempo-resource-sqs",
                "type": "sqs",
                "config": {
                    "QueueUrl": "https://sqs.eu-west-1.amazonaws.com/791728029433/tempo-admin",
                    "MaxNumberOfMessages": 10,
                    "VisibilityTimeout": 10,
                    "WaitTimeSeconds": 0
                },
                "credentialFile": "./aws.credentials.json"
            },
            "tempo_db": {
                "_class": "./tempo-resource-couchbase",
                "type": "couchbase",
                "cluster": "http://54.155.3.16:8091",
                "bucket": "tempo",
                "insertOptions": {
                    "persist_to": 1,
                    "replicate_to": 1
                },
                "updateOptions": {
                    "persist_to": 1,
                    "replicate_to": 1
                },
                "deleteOptions": {
                    "persist_to": 1,
                    "replicate_to": 1
                }
            },
            "tempo_log_db": {
                "_class": "./tempo-resource-couchbase",
                "type": "couchbase",
                "cluster": "http://54.155.3.16:8091",
                "bucket": "tempo-log"
            },
            "tempo_log_queue": {
                "_class": "./tempo-resource-sqs",
                "type": "sqs",
                "config": {
                    "QueueUrl": "https://sqs.eu-west-1.amazonaws.com/791728029433/tempo-log",
                    "MaxNumberOfMessages": 10,
                    "VisibilityTimeout": 6,
                    "WaitTimeSeconds": 0
                },
                "credentialFile": "./aws.credentials.json"
            }
        },
        "cache": {
            "ref_hvProfile": {
                "type": "dbview",
                "resource": "tempo_db",
                "query_view": "hv:by_state"
            },
            "ref_hvProfiles": {
                "type": "dbdoc",
                "resource": "tempo_db",
                "docid": "ref::hv-profile",
                "subkey": "profiles"
            },
            "ref_Country": {
                "type": "http",
                "url": "http://madskristensen.net/posts/files/countries.xml",
                "search": "country",
                "filter": "{code:$(this).attr('code'),name:$(this).text()}"
            },
            "ref_Civ": {
                "type": "static",
                "data": [
                    "M",
                    "Mme",
                    "Mlle"
                ]
            }
        },
