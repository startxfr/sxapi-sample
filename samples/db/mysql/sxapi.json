{
    "name": "sxapi-sample-db-mysql",
    "description": "sxapi database sample for mysql endpoints (0.0.6). Display dynamic content from a simple database",
    "version": "0.0.6",
    "session": {},
    "plugins": [
    ],
    "resources": {
        "mysql-sample": {
            "_class": "mysql",
            "server": {
                "host": "172.17.42.1",
                "port": "3306",
                "user": "dev",
                "password": "dev",
                "database": "test"
            }
        }
    },
    "server": {
        "type": "express",
        "port": "8080",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "method": "ROUTER",
                "resource": "mysql-sample",
                "table": "log",
                "id_fields": "id",
                "endpoints": [
                    {
                        "path": "/",
                        "method": "GET",
                        "resource_handler": "endpoints.list",
                        "sql": "SELECT * FROM `log` LIMIT 10"
                    },
                    {
                        "path": "/",
                        "method": "POST",
                        "resource_handler": "endpoints.create"
                    },
                    {
                        "path": "/:id",
                        "method": "GET",
                        "resource_handler": "endpoints.get"
                    },
                    {
                        "path": "/:id",
                        "method": "PUT",
                        "resource_handler": "endpoints.update"
                    },
                    {
                        "path": "/:id",
                        "method": "DELETE",
                        "resource_handler": "endpoints.delete"
                    }
                ]
            }
        ]
    }
}
