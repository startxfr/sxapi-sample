{
    "name": "sxapi-sample-db-couchbase",
    "description": "sxapi database sample for couchbase endpoints (v0.0.17). Display dynamic content from a simple database",
    "version": "0.0.17",
    "session": {},
    "plugins": [
    ],
    "resources": {
        "couchbase-sample": {
            "_class": "couchbase",
            "cluster": "http://172.17.42.1:8091",
            "bucket": "beer-sample",
            "insertOptions": {
                "persist_to": 1,
                "replicate_to": 0
            },
            "updateOptions": {
                "persist_to": 1,
                "replicate_to": 0
            },
            "deleteOptions": {
                "persist_to": 1,
                "replicate_to": 0
            }
        }
    },
    "server": {
        "type": "express",
        "port": "8080",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "method": "ROUTER",
                "resource": "couchbase-sample",
                "endpoints": [
                    {
                        "path": "/",
                        "method": "GET",
                        "endpoint": "list",
                        "n1ql": "SELECT * FROM `beer-sample` LIMIT 10"
                    },
                    {
                        "path": "/",
                        "method": "POST",
                        "endpoint": "create"
                    },
                    {
                        "path": "/:id",
                        "method": "POST",
                        "endpoint": "create"
                    },
                    {
                        "path": "/:id",
                        "method": "GET",
                        "endpoint": "get"
                    },
                    {
                        "path": "/:id",
                        "method": "PUT",
                        "endpoint": "update"
                    },
                    {
                        "path": "/:id",
                        "method": "DELETE",
                        "endpoint": "delete"
                    }
                ]
            }
        ]
    }
}
