{
    "name": "sxapi-sample-db-couchbase",
    "description": "sxapi database sample for couchbase endpoints (master). Display dynamic content from a simple database",
    "version": "master",
    "session": {},
    "plugins": [
    ],
    "resources": {
        "couchbase-sample": {
            "_class": "resource-couchbase",
            "type": "couchbase",
            "cluster": "http://172.17.42.1:8091",
            "bucket": "beer-sample"
        }
    },
    "server": {
        "type": "express",
        "port": "8080",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "method": "ROUTER",
                "resource": "couchbase-sample",
                "endpoints": [
                    {
                        "path": "/",
                        "method": "GET",
                        "resource_handler": "endpoints.list",
                        "n1ql": "SELECT * FROM `beer-sample` LIMIT 10"
                    },
                    {
                        "path": "/",
                        "method": "POST",
                        "resource_handler": "endpoints.create"
                    },
                    {
                        "path": "/:id",
                        "method": "POST",
                        "resource_handler": "endpoints.create"
                    },
                    {
                        "path": "/:id",
                        "method": "GET",
                        "resource_handler": "endpoints.get"
                    },
                    {
                        "path": "/:id",
                        "method": "PUT",
                        "resource_handler": "endpoints.update"
                    },
                    {
                        "path": "/:id",
                        "method": "DELETE",
                        "resource_handler": "endpoints.delete"
                    }
                ]
            }
        ]
    }
}
